<h1>Books list</h1>
<%= link_to "Create", new_book_path %>
<table>
  <thead>
    <th>Title</th>
    <th>Author</th>
    <th>Summary</th>
    <th>Price</th>
  </thead>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.summary %></td>
    <td><%= book.price %></td>
    <td>
      <%= link_to "Edit", edit_book_path(book) %>
      <%= link_to "Delete", book, method: :delete, data: { confirm: "Are you sure you want to delete this entry?"} %>
    </td>
  </tr>
  <% end %>
</table>
